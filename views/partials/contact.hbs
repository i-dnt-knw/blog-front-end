<div class="container bg-light py-3 my-5">
  <h3 class="text-center text-muted">Contact Us</h3>
  <form style="width:90%;margin:auto;" action="contact" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" placeholder="John Deere">
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email" placeholder="name@example.com">
    </div>
    <div class="mb-3">
      <label for="msg" class="form-label">Massagers</label>
      <textarea class="form-control" id="msg" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>